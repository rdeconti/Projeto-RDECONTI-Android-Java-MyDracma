<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    style="@style/MyDracmaConstraintLayoutReport"
    tools:context="com.prosperday.mydracma.app_Tool.appToolStep00Menu"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="33dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyDracmaToolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitle="@string/lbl_Tool"
        app:subtitleTextColor="@color/MyDracmaColorTextWhite"
        app:title="@string/app_name"
        app:titleTextColor="@color/MyDracmaColorTextWhite" />

    <TextView
        android:id="@+id/textViewStepHelp"
        style="@style/MyDracmaTextHelp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_ToolMenu"
        app:layout_constraintBottom_toTopOf="@+id/btnReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAppLogo" />

    <ImageView
        android:id="@+id/imageAppLogo"
        style="@style/MyDracmaImageLogo"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="103dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/lbl_MyDracmaImage"
        app:layout_constraintBottom_toTopOf="@+id/textViewStepHelp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/lbl_Reset"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnDownload"
        app:layout_constraintEnd_toStartOf="@+id/btnBackup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStepHelp" />

    <Button
        android:id="@+id/btnBackup"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/lbl_Backup"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnUpload"
        app:layout_constraintEnd_toStartOf="@+id/btnRestore"
        app:layout_constraintStart_toEndOf="@+id/btnReset"
        app:layout_constraintTop_toBottomOf="@+id/textViewStepHelp" />

    <Button
        android:id="@+id/btnRestore"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/lbl_Restore"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnTemplate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBackup"
        app:layout_constraintTop_toBottomOf="@+id/textViewStepHelp" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/lbl_Download"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnUpload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReset" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/lbl_Upload"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTemplate"
        app:layout_constraintStart_toEndOf="@+id/btnDownload"
        app:layout_constraintTop_toBottomOf="@+id/btnBackup" />

    <Button
        android:id="@+id/btnTemplate"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/lbl_Template"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnUpload"
        app:layout_constraintTop_toBottomOf="@+id/btnRestore" />

</android.support.constraint.ConstraintLayout>