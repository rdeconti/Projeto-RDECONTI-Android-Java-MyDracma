<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    style="@style/MyDracmaConstraintLayoutReport"
    tools:context="com.prosperday.mydracma.app_Configuration.appConfigurationLimit"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="33dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyDracmaToolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitle="@string/lbl_limit"
        app:subtitleTextColor="@color/MyDracmaColorTextWhite"
        app:title="@string/app_name"
        app:titleTextColor="@color/MyDracmaColorTextWhite" />

    <TextView
        android:id="@+id/textView_LowerLimitEmergency"
        style="@style/MyDracmaTextView_100"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_LowerLimitEmergency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/editText_LowerLimitEmergency"
        style="@style/MyDracmaEditText_50"
        android:layout_marginTop="8dp"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView_LowerLimitEmergency"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView_UpperLimitEmergency"
        style="@style/MyDracmaTextView_100"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_UpperLimitEmergency"
        app:layout_constraintEnd_toStartOf="@+id/editText_UpperLimitEmergency"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/editText_UpperLimitEmergency"
        style="@style/MyDracmaEditText_50"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dracma_background_tint"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView_LowerLimitRetirement"
        style="@style/MyDracmaTextView_100"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_LowerLimitRetirement"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_LowerLimitEmergency" />

    <EditText
        android:id="@+id/editText_LowerLimitRetirement"
        style="@style/MyDracmaEditText_50"
        android:layout_marginTop="8dp"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView_LowerLimitRetirement"
        app:layout_constraintTop_toBottomOf="@+id/editText_LowerLimitEmergency" />

    <TextView
        android:id="@+id/textView_UpperLimitRetirement"
        style="@style/MyDracmaTextView_100"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_UpperLimitRetirement"
        app:layout_constraintEnd_toStartOf="@+id/editText_UpperLimitRetirement"
        app:layout_constraintTop_toBottomOf="@+id/textView_UpperLimitEmergency" />

    <EditText
        android:id="@+id/editText_UpperLimitRetirement"
        style="@style/MyDracmaEditText_50"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dracma_background_tint"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_UpperLimitEmergency" />

    <TextView
        android:id="@+id/textView_LowerLimitIncome"
        style="@style/MyDracmaTextView_100"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_LowerLimitIncome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_LowerLimitRetirement" />

    <EditText
        android:id="@+id/editText_LowerLimitIncome"
        style="@style/MyDracmaEditText_50"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dracma_background_tint"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView_LowerLimitIncome"
        app:layout_constraintTop_toBottomOf="@+id/editText_LowerLimitRetirement" />

    <TextView
        android:id="@+id/textView_UpperLimitIncome"
        style="@style/MyDracmaTextView_100"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_UpperLimitIncome"
        app:layout_constraintEnd_toStartOf="@+id/editText_UpperLimitIncome"
        app:layout_constraintTop_toBottomOf="@+id/textView_UpperLimitRetirement" />

    <EditText
        android:id="@+id/editText_UpperLimitIncome"
        style="@style/MyDracmaEditText_50"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dracma_background_tint"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_UpperLimitRetirement" />

    <TextView
        android:id="@+id/textView_LowerLimitOutcome"
        style="@style/MyDracmaTextView_100"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_LowerLimitOutcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_LowerLimitIncome" />

    <EditText
        android:id="@+id/editText_LowerLimitOutcome"
        style="@style/MyDracmaEditText_50"
        android:layout_marginTop="8dp"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView_LowerLimitOutcome"
        app:layout_constraintTop_toBottomOf="@+id/editText_LowerLimitIncome" />

    <TextView
        android:id="@+id/textView_UpperLimitOutcome"
        style="@style/MyDracmaTextView_100"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_UpperLimitOutcome"
        app:layout_constraintEnd_toStartOf="@+id/editText_UpperLimitOutcome"
        app:layout_constraintTop_toBottomOf="@+id/textView_UpperLimitIncome" />

    <EditText
        android:id="@+id/editText_UpperLimitOutcome"
        style="@style/MyDracmaEditText_50"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_UpperLimitIncome" />

    <TextView
        android:id="@+id/textView_LowerLimitGoal"
        style="@style/MyDracmaTextView_100"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_LowerLimitGoal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_LowerLimitOutcome" />

    <EditText
        android:id="@+id/editText_LowerLimitGoal"
        style="@style/MyDracmaEditText_50"
        android:layout_marginTop="8dp"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView_LowerLimitGoal"
        app:layout_constraintTop_toBottomOf="@+id/editText_LowerLimitOutcome" />

    <TextView
        android:id="@+id/textView_UpperLimitGoal"
