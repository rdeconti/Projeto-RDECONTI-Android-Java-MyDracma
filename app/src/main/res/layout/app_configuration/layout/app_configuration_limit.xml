        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_UpperLimitGoal"
        app:layout_constraintEnd_toStartOf="@+id/editText_UpperLimitGoal"
        app:layout_constraintTop_toBottomOf="@+id/textView_UpperLimitOutcome" />

    <EditText
        android:id="@+id/editText_UpperLimitGoal"
        style="@style/MyDracmaEditText_50"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_UpperLimitOutcome" />

    <TextView
        android:id="@+id/textView_LowerLimitBudget"
        style="@style/MyDracmaTextView_100"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_LowerLimitBudget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_LowerLimitGoal" />

    <EditText
        android:id="@+id/editText_LowerLimitBudget"
        style="@style/MyDracmaEditText_50"
        android:layout_marginTop="8dp"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView_LowerLimitBudget"
        app:layout_constraintTop_toBottomOf="@+id/textView_LowerLimitGoal" />

    <TextView
        android:id="@+id/textView_UpperLimitBudget"
        style="@style/MyDracmaTextView_100"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_UpperLimitBudget"
        app:layout_constraintEnd_toStartOf="@+id/editText_UpperLimitBudget"
        app:layout_constraintTop_toBottomOf="@+id/textView_UpperLimitGoal" />

    <EditText
        android:id="@+id/editText_UpperLimitBudget"
        style="@style/MyDracmaEditText_50"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/hnt_Percent"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_UpperLimitGoal" />

    <Button
        android:id="@+id/btnUpdate"
        style="@style/MyDracmaButton"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/lbl_Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDelete"
        style="@style/MyDracmaButton"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/lbl_Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressbar2"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="143dp"
        android:background="@drawable/progressbar_circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="65"
        android:progressDrawable="@drawable/progressbar_circle_circular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintStart_toEndOf="@+id/btnUpdate"
        app:layout_constraintTop_toBottomOf="@+id/editText_LowerLimitBudget" />

