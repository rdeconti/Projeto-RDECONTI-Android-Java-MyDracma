<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    style="@style/MyDracmaConstraintLayoutReport"
    tools:context="com.prosperday.mydracma.app_AccountTransaction.appAccountTransactionScreenUpdateDelete"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="33dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/MyDracmaToolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:subtitle="@string/lbl_Transaction"
        app:subtitleTextColor="@color/MyDracmaColorTextWhite"
        app:title="@string/app_name"
        app:titleTextColor="@color/MyDracmaColorTextWhite" />

    <TextView
        android:id="@+id/textViewTransaction"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_Transaction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Spinner
        android:id="@+id/spnTransaction"
        style="@style/MyDracmaSpinner_250"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewTransaction"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textViewCategory"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_Category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTransaction" />

    <Spinner
        android:id="@+id/spnCategory"
        style="@style/MyDracmaSpinner_250"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCategory"
        app:layout_constraintTop_toBottomOf="@+id/spnTransaction" />

    <TextView
        android:id="@+id/textViewSubCategory"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_SubCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCategory" />

    <Spinner
        android:id="@+id/spnSubCategory"
        style="@style/MyDracmaSpinner_250"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewSubCategory"
        app:layout_constraintTop_toBottomOf="@+id/spnCategory" />

    <TextView
        android:id="@+id/textViewStepName"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_Account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubCategory" />

    <Spinner
        android:id="@+id/spnAccount"
        style="@style/MyDracmaSpinner_250"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewStepName"
        app:layout_constraintTop_toBottomOf="@+id/spnSubCategory" />

    <TextView
        android:id="@+id/textViewDatePlanned"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_DatePlanned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStepName" />

    <EditText
        android:id="@+id/editTextDatePlanned"
        style="@style/MyDracmaEditText_250"
        android:layout_marginEnd="8dp"
        android:hint="@string/hnt_PlannedDate"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewDatePlanned"
        app:layout_constraintTop_toBottomOf="@+id/spnAccount" />

    <TextView
        android:id="@+id/textViewDateRealized"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_DateRealized"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDatePlanned" />

    <EditText
        android:id="@+id/editTextDateRealized"
        style="@style/MyDracmaEditText_250"
        android:layout_marginEnd="8dp"
        android:hint="@string/hnt_RealizedDate"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewDateRealized"
        app:layout_constraintTop_toBottomOf="@+id/editTextDatePlanned" />

    <TextView
        android:id="@+id/textViewValuePlanned"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_ValuePlanned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDateRealized" />

    <EditText
        android:id="@+id/editTextValuePlanned"
        style="@style/MyDracmaEditText_250"
        android:layout_marginEnd="8dp"
        android:hint="@string/hnt_PlannedValue"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewValuePlanned"
        app:layout_constraintTop_toBottomOf="@+id/editTextDateRealized" />

    <TextView
        android:id="@+id/textViewValueRealized"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_ValueRealized"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValuePlanned" />

    <EditText
        android:id="@+id/editTextValueRealized"
        style="@style/MyDracmaEditText_250"
        android:layout_marginEnd="8dp"
        android:hint="@string/hnt_RealizedValue"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewValueRealized"
        app:layout_constraintTop_toBottomOf="@+id/editTextValuePlanned" />

    <TextView
        android:id="@+id/textViewPeriod"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_Period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewValueRealized" />

    <EditText
        android:id="@+id/editTextOccurrence"
        style="@style/MyDracmaEditText_50"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/hnt_Occurrence"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextValueRealized" />

    <TextView
        android:id="@+id/textViewOccurrence"
        style="@style/MyDracmaTextView_95"
        android:text="@string/lbl_Occurrence"
        app:layout_constraintEnd_toStartOf="@+id/editTextOccurrence"
        app:layout_constraintTop_toBottomOf="@+id/editTextValueRealized" />

    <Spinner
        android:id="@+id/spnPeriod"
        style="@style/MyDracmaSpinner_50"
        android:entries="@array/Period"
        app:layout_constraintStart_toEndOf="@+id/textViewPeriod"
        app:layout_constraintTop_toBottomOf="@+id/editTextValueRealized" />

    <TextView
        android:id="@+id/textViewReminder"
        style="@style/MyDracmaTextView_95"
        android:layout_marginStart="16dp"
        android:text="@string/lbl_Reminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPeriod" />

    <Spinner
        android:id="@+id/spnReminder"
        style="@style/MyDracmaSpinner_50"
        android:entries="@array/YesNo"
        app:layout_constraintStart_toEndOf="@+id/textViewReminder"
        app:layout_constraintTop_toBottomOf="@+id/spnPeriod" />

    <TextView
        android:id="@+id/textViewAutomatic"
        style="@style/MyDracmaTextView_95"
        android:text="@string/lbl_Automatic"
        app:layout_constraintEnd_toStartOf="@+id/spnAutomatic"
        app:layout_constraintTop_toBottomOf="@+id/textViewOccurrence" />

    <Spinner
        android:id="@+id/spnAutomatic"
        style="@style/MyDracmaSpinner_50"
        android:layout_marginEnd="8dp"
        android:entries="@array/YesNo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextOccurrence" />

    <Button
        android:id="@+id/btnUpdate"
        style="@style/MyDracmaButton"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="31dp"
        android:text="@string/lbl_Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewReminder" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="66dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/progressbar_circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="65"
        android:progressDrawable="@drawable/progressbar_circle_circular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintStart_toEndOf="@+id/btnUpdate"
        app:layout_constraintTop_toBottomOf="@+id/spnReminder" />

    <Button
        android:id="@+id/btnDelete"
        style="@style/MyDracmaButton"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="31dp"
        android:text="@string/lbl_Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAutomatic" />

</android.support.constraint.ConstraintLayout>